---
const pageTitle = "Home";
import '../styles/global.css';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import About from '../components/About.astro';
import Services from '../components/Services.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Saira+Extra+Condensed:wght@200;300;400&display=swap" rel="stylesheet">
	</head>
	<body class="body">
		<Header />
		<Hero />
		<About />
		<Services />
			<section class="flex-container">
			</section>

			<section>

			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.flex-container {
		background-color: #0c7d70;
	}
	.box {
		min-height: 400px;
		min-width: 400px;
		background-color: #0c7d70;
	}
	img {
		display: block;
		width: 100%;
	}
	.flex-item > div{
		padding-block: max(6vh, 1rem);
		padding-inline: 10px;
	}

	@media (min-width: 768px) {
		.flex-item > div{
			padding-block: max(8vh, 1rem);
			padding-inline: 40px;
		}
	}
	@media (min-width: 900px) {
		.flex-container {
		display: flex;
		align-items: center;
		}
		.flex-item {
			flex: 1;
		}
		.flex-item > div {
			padding-inline: 20px;
			padding-block: max(1vh, 1rem);
		}
		.services-wrapper {
			display: flex;
			justify-content: space-around;
	}
		h1 {
			font-size: calc(1vw + 3rem);
		}
		span {
			font-size: calc(1vw + 0.3rem);
		}
		.hero-span {
			font-size: calc(1vw + 0.5rem);
		}
		p {
			font-size: calc(1vw + 0.5rem);
		}
	}
	@media (min-width: 1200px) {
		.flex-item > div {
			margin: 0 30px;
		}
		h1 {
			font-size: calc(1vw + 4rem);
		}
		span {
			font-size: calc(1vw + 0.4rem);
		}
		.hero-span {
			font-size: calc(3vw + 0.6rem);
		}
		/* p {
			font-size: calc(1vw + 0.5rem);
		} */
	}
</style>